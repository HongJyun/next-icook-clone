  "servings": 2,
  "totalTime": 30,
  "recipeIngredient": [
    { "type": "raw_food", "name": "板豆腐", "amount": "1塊" },
    { "type": "raw_food", "name": "豬肉絲", "amount": "100克" },
    { "type": "seasoning", "name": "蠔油", "amount": "2大匙" },
    { "type": "raw_food", "name": "蔥", "amount": "1根" },
    { "type": "seasoning", "name": "米酒", "amount": "1大匙" },
    { "type": "raw_food", "name": "紅辣椒", "amount": "1根" },
    { "type": "seasoning", "name": "糖", "amount": "1小匙" },
    { "type": "raw_food", "name": "薑", "amount": "2片" },
